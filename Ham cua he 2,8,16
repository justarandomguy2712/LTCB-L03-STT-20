#include <stdio.h>
#include <stdbool.h>
void chuyencoso(int n){
	int detectZero=0;
	for(int i=31;i>=0;i--){
		if((n>>i) & 1){
			detectZero=1;
		}
		if(detectZero){
			printf(" %d",(n>>i) & 1);
		}
	}
	printf("\n");
	printf("so sang he 8 la: %o\n",n);
	printf("so sang he 16 la:%X\n",n);
}
int main (){
	int n;
	scanf("%d",&n);
	chuyencoso(n);
}
  
