#include <stdio.h>
#include <limits.h>
int main(){
    int n;
    scanf("%d", &n);
    int a[n];
    int max=INT_MIN;
    int min=INT_MAX;
    int min_index=-1;
    int max_index=-1;
    for(int i = 0; i < n; i++){
        scanf("%d", &a[i]);
    }
    for(int i=0;i<n;i++){
    	if(a[i]>max){
    		max=a[i];
    		max_index=i;
		}
		if(a[i]<min){
			min=a[i];
			min_index=i;
		}
	}
	printf("\nPhan tu lon nhat o vi tri %d la so %d",max_index,max);
	printf("\nPhan tu nho nhat o vi tri %d la so %d",min_index,min);
}
