#include <stdio.h>
#include <math.h>
#define pi 3.1416
int main() {
    float R, dienTich, theTich;
    printf("Nhap ban kinh: ");
    scanf("%f", &R);
    dienTich = 4 * pi * R * R;
    theTich = (4.0 / 3) * pi * pow(R, 3);
    printf("Dien tich: %.2f\n", dienTich);
    printf("The tich: %.2f\n", theTich);

    return 0;
}
